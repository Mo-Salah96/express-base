extends ../layout

block content
    h3="Authentification"
    if message && message.length > 0
        p.alert.alert-danger=message
    form(action="/auth/login", method="POST")
        input(class="form-control", name="email", type="email", placeholder="Votre email", required)
        input(class="form-control", name="password", type="password", placeholder="Votre mot de passe", required)
        button(type="submit") Se connecter 